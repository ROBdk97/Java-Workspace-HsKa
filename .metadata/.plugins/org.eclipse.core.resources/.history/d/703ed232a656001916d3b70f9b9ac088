package Kaesten;

public class Sporttabelle {

	public static void main(String[] args) {
		final int STARTJAHR = 2018;
		final int ANZAHLJAHRE = 10;
		for (int i = STARTJAHR; i <= (STARTJAHR + ANZAHLJAHRE); i++) {
			if (i % 2 == 0) {
				System.out.println(i + " gibt es eine Sommerolympiade oder Fußballweltmeisterschaft");
			} else {
				// System.out.println(i+" gibt es keine Sommerolympiade oder
				// Fußballweltmeisterschaft");
			}
		}
	}

}
